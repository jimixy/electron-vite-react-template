{
  "name": "speakin-intelligent-metting",
  "description": "智能 会议",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rimraf yarn.lock && rimraf ./**/.next && rimraf dist && rimraf ./**/out && rimraf {**/,}node_modules",
    "dev": "cross-env NODE_ENV=development node -r esbuild-register ./scripts/dev.ts",
    "preview": "cross-env NODE_ENV=production electron ./dist/main",
    "dev:renderer": "vite",
    "dev:main": "cross-env NODE_ENV=development node -r esbuild-register ./scripts/dev.ts",
    "build": "rimraf dist && vite build && npm run prod:esbuild && npm run publish:win",
    "prod:esbuild": "cross-env NODE_ENV=production node -r esbuild-register ./scripts/prod.ts",
    "prod:tsc": "tsc --project ./src/main/tsconfig.json",
    "publish": "concurrently \"npm:publish:mac\" \"npm:publish:win\"",
    "publish:mac": "env-cmd -r ./.config/.env-secrets.json -e production electron-builder --macos",
    "publish:win": "env-cmd -r ./.config/.env-secrets.json -e production electron-builder --win"
  },
  "dependencies": {
    "antd": "^4.15.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-router-dom": "^5.2.0",
    "recoil": "^0.2.0",
    "tailwindcss": "^2.0.3"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@sync-labs/eslint-config": "^2.2.6",
    "@types/node": "^14.14.39",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.7",
    "@vitejs/plugin-react-refresh": "^1.1.0",
    "autoprefixer": "^10.2.5",
    "chalk": "^4.1.0",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "electron": "^11.3.0",
    "electron-builder": "^22.9.1",
    "electron-notarize": "^1.0.0",
    "env-cmd": "^10.1.0",
    "esbuild": "^0.8.53",
    "esbuild-register": "^2.0.0",
    "eslint": "^7.20.0",
    "postcss": "^8.2.10",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-esbuild": "^3.0.2",
    "tailwindcss": "^2.1.1",
    "typescript": "^4.1.2",
    "vite": "^2.0.4"
  },
  "browserslist": [
    "last 1 electron version"
  ],
  "build": {
    "directories": {
      "output": "dist",
      "buildResources": "public"
    },
    "appId": "com.speakin-intelligent-metting",
    "productName": "智能会议系统",
    "afterSign": "scripts/notarize.js",
    "mac": {
      "category": "public.app-category.developer-tools",
      "extendInfo": {
        "NSUserNotificationAlertStyle": "alert"
      },
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": ".config/entitlements.mac.plist",
      "entitlementsInherit": ".config/entitlements.mac.plist",
      "publish": [
        {
          "provider": "generic",
          "url": "https://files.twstyled.com/releases/${name}/${os}/"
        }
      ]
    },
    "dmg": {
      "background": "public/dmgBackground.png",
      "icon": "icon.icns",
      "iconSize": 155,
      "window": {
        "width": 660,
        "height": 400
      },
      "contents": [
        {
          "x": 123,
          "y": 172
        },
        {
          "x": 539,
          "y": 168,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "requestedExecutionLevel": "requireAdministrator",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "asar": true,
    "extraMetadata": {
      "main": "main/index.js"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "language": 2052
    },
    "files": [
      {
        "filter": [
          "package.json",
          "tailwind.config.js"
        ]
      },
      {
        "from": "./dist",
        "to": "./",
        "filter": [
          "index.html"
        ]
      },
      {
        "from": "./dist/main",
        "to": "./main"
      },
      {
        "from": "./dist/assets",
        "to": "./assets"
      }
    ]
  }
}
